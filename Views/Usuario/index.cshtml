@using tl2_tp10_2023_exequiel1984.ViewModels;

@model UsuarioIndexViewModel

<table class="table">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Rol</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var usuario in Model.UsuariosViewModel)
    {
        <tr>
            <td>@usuario.NombreDeUsuario</td>
            <td>@usuario.Rol</td>
            <td>
                    <a asp-controller="Usuario" asp-action="Editar" asp-route-id="@usuario.Id">Editar</a>
                @if(ViewContext.HttpContext.Session.GetString("rol") == NivelDeAcceso.administrador.ToString()){
                    <a asp-controller="Usuario" asp-action="Eliminar" asp-route-id="@usuario.Id" onclick="return confirm('Â¿Estas seguro que quieres eliminar el elemento?')">Eliminar</a>                      
                }
            </td>
        </tr>
    }
  </tbody>
</table>