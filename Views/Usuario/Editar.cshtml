@using tl2_tp10_2023_exequiel1984.ViewModels;
@model UsuarioEditarViewModel

<form asp-controller="Usuario" asp-action="Editar">
    <input hidden asp-for="@Model.Id">
    <div class="form-group">
        <label asp-for="@Model.Nombre"></label>
        <input asp-for="@Model.Nombre" class="form-control" />
        <span></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Contrasenia"></label>
        <input asp-for="@Model.Contrasenia" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Rol"></label>
        <select asp-for="@Model.Rol" asp-items="@Html.GetEnumSelectList<NivelDeAcceso>()" class="form-select" aria-label="Default select example[1]"></select>
    </div>
    <button type="submit">Enviar</button>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
