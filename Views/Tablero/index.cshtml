@model List<Tablero>

<h1>LISTA DE TABLEROS</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Id Usuario Propietario</th>
      <th scope="col">Nombre</th>
      <th scope="col">Descripcion</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var tablero in Model)
    {
        <tr>
            <td>@tablero.Id</td>
            <td>@tablero.IdUsuarioPropietario</td>
            <td>@tablero.Nombre</td>
            <td>@tablero.Descripcion</td>
            <td>
                    <a asp-controller="Tablero" asp-action="Editar" asp-route-id="@tablero.Id">Editar</a>
                    <a asp-controller="Tablero" asp-action="Eliminar" asp-route-id="@tablero.Id" onclick="return confirm('Â¿Estas seguro que quieres eliminar el elemento?')">Eliminar</a>                      
                    <a asp-controller="Tarea" asp-action="ListarTareasPorIdTablero" asp-route-idTablero="@tablero.Id">Listar Tareas</a>
            </td>
        </tr>
    }
  </tbody>
</table>

