@using tl2_tp10_2023_exequiel1984.ViewModels;
@model CrearTableroViewModel
<h1>CREAR TABLERO</h1>
<form asp-controller="Tablero" asp-action="Crear">
  <div class="form-group">
    <label asp-for="@Model.IdUsuarioPropietario">Id Usuario Propietario</label>
    <input asp-for="@Model.IdUsuarioPropietario" class="form-control">
    <span asp-validation-for="@Model.IdUsuarioPropietario" class="text-danger"></span>    
  </div>
  <div class="form-group">
    <label asp-for="@Model.Nombre">Nombre</label>
    <input asp-for="@Model.Nombre" class="form-control">
    <span asp-validation-for="@Model.Nombre" class="text-danger"></span>    
  </div>
  <div class="form-group">
    <label asp-for="@Model.Descripcion">Descripcion</label>
    <input asp-for="@Model.Descripcion" class="form-control">
    <span asp-validation-for="@Model.Descripcion" class="text-danger"></span>    
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
