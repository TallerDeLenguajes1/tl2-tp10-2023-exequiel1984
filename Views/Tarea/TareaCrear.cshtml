@using tl2_tp10_2023_exequiel1984.ViewModels;

@model TareaCrearViewModel

<form asp-controller="Tarea" asp-action="TareaCrear">
  <legend>CREAR TAREA</legend>
  <div class="form-group">
    <label asp-for="@Model.IdTablero"></label>
    <select asp-for="@Model.IdTablero" asp-items="@(new SelectList(Model.Tableros, "Id", "Nombre"))" class="form-select">
      <option value="">Seleccione el tablero</option>
    </select>
    <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="@Model.Nombre"></label>
    <input asp-for="@Model.Nombre" class="form-control">
    <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="@Model.Estado"></label>
    <select asp-for="@Model.Estado" asp-items="@Html.GetEnumSelectList<EstadoTarea>()" class="form-select" aria-label="Default select example[1]"></select>
    <span asp-validation-for="@Model.Estado" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="@Model.Descripcion"></label>
    <input asp-for="@Model.Descripcion" class="form-control">
    <span asp-validation-for="@Model.Descripcion" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="@Model.Color"></label>
    <input asp-for="@Model.Color" class="form-control">
    <span asp-validation-for="@Model.Color" class="text-danger"></span>
  </div>
  <div class="form-group">
    @* Â¿Aqui como asi "IdUsuarioAsignado" NULL? *@
    <label asp-for="@Model.IdUsuarioAsignado"></label>
    <select asp-for="@Model.IdUsuarioAsignado" asp-items="@(new SelectList(Model.Usuarios, "Id", "NombreDeUsuario"))" class="form-select">
      <option value="">Seleccione el usuario asignado</option>
    </select>
    <span asp-validation-for="@Model.IdUsuarioAsignado" class="text-danger"></span>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
